<h2>Add your own car or cars</h2>
{{#if error}}
    <p class="alert_err">{{error}}</p>
{{/if}}
<form action="/add" method="post">
    <div class="input-field">
        <input id="title" type="text" class="validate" name="title" value="{{value.title}}">
        <label for="title">Title</label>
    </div>
    <div class="input-field">
        <input id="price" type="text" class="validate" name="price" value="{{value.price}}">
        <label for="price">Price</label>
    </div>
    <div class="input-field">
        <input id="desc" type="text" class="validate" name="desc" value="{{value.desc}}">
        <label for="desc">Description</label>
    </div>
    <div class="input-field">
        <input id="url_img" type="text" class="validate" name="url" value="{{value.url}}">
        <label for="url_img">Url image</label>
    </div>
    
    <input type="hidden" name='_csrf' value='{{csrf}}'>
    
    <button class="btn btn-primary">Add</button>
</form>