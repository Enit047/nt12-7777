<h2>Cars</h2>

{{#if cars}}
    {{#each cars}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-image">
                        <img src="{{url}}" alt="{{title}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p>{{desc}}</p>
                        <p class="price_car">{{price}}</p>
                    </div>
                    <div class="card-action flex">
                        <a href="/cars/{{_id}}" target="_blank">More</a>
                        {{#if @root.isAuthUser}}
                            {{#ifunique userId @root.userId}}
                                <a href="/cars/{{_id}}/edit?allow=true">Edit</a>
                            {{/ifunique}}
                            <form action="/basket/add" method="post">
                                <input type="hidden" value="{{_id}}" name="id">
                                <input type="hidden" name='_csrf' value='{{@root.csrf}}'>
                                <button class="btn btn-primary">Add in basket</button>
                            </form>
                            {{#ifunique userId @root.userId}}
                                <form action="/cars/delete" method="POST">
                                    <input type="hidden" value="{{_id}}" name="id">
                                    <input type="hidden" name='_csrf' value='{{@root.csrf}}'>
                                    <button class="btn red accent-2">Delete</button>
                                </form>
                            {{/ifunique}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>You dont have any car</p>
{{/if}}