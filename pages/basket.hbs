<h2>Basket</h2>

<div class="basket">
    {{#if cart}}
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each cart}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{amount}}</td>
                        <td>{{price}}</td>
                        <td>
                            <button class="btn btn-danger js-action" data-id="{{_id}}" data-csrf="{{@root.csrf}}">Delete</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <p><strong>Price: </strong> <strong class="price_car">{{price}}</strong></p>

        <form action='/order' method="POST">
            <input type="hidden" name='_csrf' value='{{csrf}}'>
            <button>Order</button>
        </form>
    {{else}}
        <p>Your basket is empty</p>
    {{/if}}
</div>