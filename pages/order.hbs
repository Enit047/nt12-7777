<h2>Orders</h2>

{{#if order}}
    {{#each order}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Order ({{_id}})
                        </span>
                        <p class="date js">{{date}}</p>
                        <p><em>{{userId.name}} ({{userId.email}})</em></p>

                        <ol>
                            {{#each cars}}
                                <li>{{title}} (x<strong>{{amount}}</strong>)</li>
                            {{/each}}
                        </ol>

                        <hr>

                        <p>Price: <span class="price_car">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>You dont have orders</p>
{{/if}}